            if(tab2)
            s = tab2[i][j] + tab2[i - 1][j] + tab2[i][j - 1] + tab2[i + 1][j] + tab2[i][j + 1];
            if (s > max)
                max = s; 
        }  
    } */
    cout << "===MAX===" << endl << max;
    delete[] tab2;

    tab2 = NULL;
}
int main()
{
    int i, n, a,w,k;
    int* T;
    int* tab1;
    int* tab2;
    int* tab3;
    
    float sum, sr;
    cin >> n;
    T = new int[n];
    for (i = 0; i < n; i++) T[i] = 2 + i + i;
   // for (i = 0; i < n; i++) cout << T[i] << endl;

    // Å›rednia
    sr = srednia(n, T);
    cout << "srednia= " << sr << endl;
    // dodawanie
    sum=suma(n,T);
    cout << "suma= " << sum << endl;
    delete[] T;
    //zadanie 2=========================================
    cout << " zadanie 2" << endl;
    cin >> a;
    tab1 = new int[a];
    //tablica 1
    cout << "tab1= " << endl;
    for (i = 0; i < a; i++) tab1[i] = 1 + i + i;
    for (i = 0; i < a; i++) cout << tab1[i] << endl;
    tab2 = new int[a];
    //tablica 2
    cout << "tab2= " << endl;
    for (i = 0; i < a; i++) tab2[i] = 2 + i + i;
    for (i = 0; i < a; i++) cout << tab2[i] << endl;
