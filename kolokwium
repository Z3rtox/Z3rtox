#include <iostream>

using namespace std;


float srednia(int n, int* g) {
    float sr;
    int i;
    sr = 0;
    for (i = 0; i < n; i++) sr = sr + g[i];
    sr = sr / n;

    return sr;
}
float suma(int n, int* T) {
    float sum;
    int i;
    sum = 0;
    for (i = 0; i < n; i++) sum = sum + T[i];

    return sum;
}
void zadanie2a(int a, int* tab1, int* tab2, int* tab3) {
    int i,x;

    for (i = 0; i < a; i++) tab3[i] = tab1[i] + tab2[i];
   
}
void tablica2d(int w,int k) {
    int j, y,max=0,s;
    double** tab2 = new double* [w];
    for (int i = 0; i < w; ++i)
    {
        tab2[i] = new double[k];
        for (int j = 0; j < k; ++j)
            tab2[i][j] = (i + j);
    }
    for (int i = 0; i < w; ++i, cout << endl)
        for (int j = 0; j < k; ++j)
            cout << tab2[i][j] << '\t';
 /*   for (int i = 0; i < w; ++i, cout << endl) {
